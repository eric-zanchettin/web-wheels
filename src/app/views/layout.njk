<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% include "parts/styles.njk" %}
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    
    {% block head %}

    {% endblock %}

</head>
<body>

    <nav>
        <div class="menu">
            <a href="/"><img src="/webwheels_logo.png" alt="WebWheels Logo"></a>
            <ul>
                <li><a class="menu-link" href="#">Comprar</a></li>
                <li><a class="menu-link" href="/sell/">Vender</a></li>
                {% if not session.userId %}
                <div>
                    <li>
                        <a class="menu-link" href="/users/login">Entrar<i class="material-icons">login</i></a>
                    </li>
                </div>
                {% else %}
                <div>
                    <li class="account">
                        <a class="menu-link" 
                        onmouseout="menuScripts.decactiveSubmenu(this)"
                        onmouseover="menuScripts.activeSubmenu(this)"
                        href="/users/account/{{ session.userId }}">
                            <i class="material-icons">account_circle</i>Conta
                        </a>
                    </li>
                    <div class="submenu menu-decactive" onmouseout="menuScripts.decactiveSubmenu(this)" onmouseover="menuScripts.activeSubmenu(this)">
                        <a class="sub-link" href="/users/account/{{ session.userId }}"><div>Ver</div></a>
                        <a class="sub-link" href="#"><div>Favoritos</div></a>
                        <a class="sub-link" href="#"><div>Meus An√∫ncios</div></a>
                        <a class="sub-link">
                            <div>
                                <form class="logout-form" action="/users/logout" method="POST">
                                    <button id="logout-btn" type="submit">Sair</button>
                                </form>
                            </div>
                        </a>
                    </div>
                </div>
                {% endif %}
            </ul>
        </div>
    </nav>

{% block content %}
    
{% endblock %}

<script src="/scripts.js"></script>

</body>
</html>